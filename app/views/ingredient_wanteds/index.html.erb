<div>
  <div>
    <h1>
      List of all ingredient wanteds
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new ingredient wanted
    </h2>

    <form action="/insert_ingredient_wanted" method="post">
      <div>
        <label for="item_box">
          Item
        </label>

        <input type="text" id="item_box" name="query_item">
      </div>

      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <button>
        Create ingredient wanted
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          Quantity
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ingredient_wanteds.each do |an_ingredient_wanted| %>
      <tr>
        <td>
          <%= an_ingredient_wanted.id %>
        </td>

        <td>
          <%= an_ingredient_wanted.item %>
        </td>

        <td>
          <%= an_ingredient_wanted.quantity %>
        </td>

        <td>
          <%= an_ingredient_wanted.location %>
        </td>

        <td>
          <%= time_ago_in_words(an_ingredient_wanted.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_ingredient_wanted.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredient_wanteds/<%= an_ingredient_wanted.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
