<div>
  <div>
    <h1>
      Your Fridge
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add Items!
    </h2>

    <form action="/insert_ingredient_owned" method="post">
      <div>
        <label for="item_box">
          Item
        </label>

        <input type="text" id="item_box" name="query_item">
      </div>


      <button>
        Add Ingredient
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Item
        </th>


        <th>
          Created at
        </th>

        <th></th>

      </tr>

      <% @list_of_owned.each do |an_ingredient_owned| %>
      <tr>
        
        <td>
          <%= an_ingredient_owned.item.capitalize %>
        </td>

        <td>
          <%= time_ago_in_words(an_ingredient_owned.created_at) %> ago
        </td>

        <td>
        <form action="/find_recipes">
        <input type="hidden" name="ingredient" id="ingredient_box" value="<%=an_ingredient_owned.item%>">
        <button>Find Recipes</button>
        </form>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>


<hr>
